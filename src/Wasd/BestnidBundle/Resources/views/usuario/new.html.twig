{% extends '::base.html.twig' %}

{% block contenido %}
    <form action="{{ path('usuario_create') }}" method="post" {{ form_enctype(form) }} id="form" role="form">
        <h3 class="titulo col-md-offset-3 lead">Nuevo usuario</h3>
        
        <div class="row">
            <div class="form-group col-md-3 col-md-offset-3">              
                <div class="input-group col-md-12">
                    {{ form_widget(form.user_name, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre de usuario'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.user_name) }}
                </div>
            </div>
            <div class="form-group col-md-3">              
                <div class="input-group col-md-12">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>

		<div class="row">
            <div class="form-group col-md-6 col-md-offset-3">
                <br>
                <div class="input-group col-md-12">
                    {% for contrasenia in form.password %}
                        {% if loop.first %}
                            {% set marca = 'Contraseña' %}
                        {% else %}
                            {% set marca = 'Repetir contraseña' %}
                        {% endif %}
                        {{ form_widget(contrasenia, { 'attr': {'class': 'form-control', 'placeholder': marca } }) }} 
                        {% if loop.first %}
                            <span class="input-group-addon"> </span>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="text-danger">
                    {% for contrasenia in form.password %}
                        {{ form_errors(contrasenia) }} 
                    {% endfor %}
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="form-group col-md-3 col-md-offset-3">              
                <div class="input-group col-md-12">
                    {{ form_widget(form.apellido, { 'attr': {'class': 'form-control', 'placeholder': 'Apellido'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.apellido) }}
                </div>
            </div>
            <div class="form-group col-md-3">              
                <div class="input-group col-md-12">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="form-group col-md-3 col-md-offset-3">              
                <div class="input-group col-md-12">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-phone-alt"></i></span>
                    {{ form_widget(form.telefono, { 'attr': {'class': 'form-control', 'placeholder': 'Teléfono'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.telefono) }}
                </div>
            </div>
            <div class="form-group col-md-3">              
                <div class="input-group col-md-12">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                    {{ form_widget(form.tarjeta, { 'attr': {'class': 'form-control', 'placeholder': 'Tarjeta'} }) }} 
                </div>
                <div class="text-danger">
                    {{ form_errors(form.tarjeta) }}
                </div>
            </div>
        </div>

                              
        <div class="row">
            <div class="col-md-6 col-md-offset-3" style="margin-top: 30px;">
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
            </div>
        </div>
        
        {{ form_rest(form) }}
    </form>
{% endblock %}
